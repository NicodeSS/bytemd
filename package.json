{
  "name": "bytemd",
  "private": true,
  "scripts": {
    "clean": "rm -rf packages/*/{lib,dist,tsconfig.tsbuildinfo}",
    "build": "tsc --build && node scripts/process.mjs && node scripts/build.mjs",
    "build:ci": "UMD=1 npm run build",
    "dev": "run-p dev:bundle dev:tsc dev:process",
    "dev:bundle": "node scripts/build.mjs --watch",
    "dev:tsc": "tsc --build --watch",
    "dev:process": "node scripts/process.mjs --watch",
    "test": "vitest",
    "postinstall": "node scripts/postinstall.mjs",
    "pub": "npm run clean && npm run build:ci && lerna publish --yes",
    "lint": "prettier --plugin-search-dir=. --ignore-path=.gitignore --list-different **/*.{ts,tsx,js,svelte}",
    "lint:fix": "prettier --plugin-search-dir=. --ignore-path=.gitignore --write **/*.{ts,tsx,js,svelte}",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@babel/plugin-transform-runtime": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "@icon-park/svg": "^1.3.5",
    "@microsoft/api-extractor": "^7.19.4",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.35",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/svelte": "^3.0.3",
    "chokidar": "^3.5.3",
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0",
    "jsdom": "^19.0.0",
    "lerna": "^4.0.0",
    "lodash": "^4.17.21",
    "mustache": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.6.0",
    "sass": "^1.49.0",
    "svelte": "^3.46.3",
    "svelte-preprocess": "^4.10.2",
    "svgo": "^2.8.0",
    "typescript": "^4.5.5",
    "vite": "^2.7.13",
    "vite-plugin-vue2": "^1.9.3",
    "vitest": "^0.2.7",
    "vue": "^2.6.14",
    "vue-template-compiler": "^2.6.14"
  },
  "bundlewatch": {
    "files": [
      {
        "path": "packages/*/dist/index.min.js"
      }
    ],
    "ci": {
      "repoBranchBase": "main",
      "trackBranches": [
        "main"
      ]
    }
  }
}
